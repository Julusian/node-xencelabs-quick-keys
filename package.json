{
  "name": "xencelabs-quick-keys-packages",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "dev": "yarn build && node ./scripts/watch.js",
    "postinstall": "lerna bootstrap",
    "build": "yarn lerna exec yarn build",
    "test": "yarn lint && yarn unit",
    "unit": "jest",
    "send-coverage": "codecov",
    "lint": "eslint packages --ext .ts --ext .js --ignore-pattern dist",
    "bump": "lerna version --exact --conventional-commits --no-push -m \"chore(release): publish %s\"",
    "publish2": "lerna publish from-package",
    "validate:dependencies": "yarn audit && yarn license-validate",
    "license-validate": "yarn sofie-licensecheck --allowPackages \"buffers@0.1.1;@xencelabs-quick-keys/webhid-demo@5.1.0;caniuse-lite@1.0.30001245;npm-lifecycle@3.1.5\""
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,css,json,md,scss}": [
      "prettier --write"
    ],
    "*.{ts,tsx}": [
      "yarn lint --fix"
    ]
  },
  "devDependencies": {
    "@sofie-automation/code-standard-preset": "^0.4.2",
    "@types/jest": "^27.0.2",
    "@types/node": "^14.17.27",
    "@types/node-hid": "^1.3.1",
    "@types/sharp": "^0.29.2",
    "codecov": "^3.8.3",
    "concurrently": "^6.3.0",
    "copy-webpack-plugin": "^9.0.1",
    "cross-env": "^7.0.3",
    "jest": "^27.2.5",
    "lerna": "^4.0.0",
    "open-cli": "^6.0.1",
    "stream-buffers": "^3.0.2",
    "ts-jest": "^27.0.6",
    "ts-loader": "^9.2.6",
    "ts-node": "^9.1.1",
    "typescript": "~4.2",
    "usb-detection": "^4.13.0",
    "webpack": "^5.58.2",
    "webpack-cli": "^4.9.0",
    "webpack-dev-server": "^4.3.1"
  },
  "workspaces": {
    "packages": [
      "packages/core",
      "packages/node",
      "packages/webhid",
      "packages/webhid-demo"
    ]
  }
}
