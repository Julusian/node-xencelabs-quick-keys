{
  "name": "xencelabs-quick-keys-packages",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "prepare": "husky install",
    "dev": "yarn build && node ./scripts/watch.js",
    "postinstall": "lerna bootstrap",
    "build": "yarn lerna exec yarn build",
    "test": "yarn lint && yarn unit",
    "unit": "jest",
    "send-coverage": "codecov",
    "lint:raw": "eslint --ignore-pattern dist --ext .ts --ext .js ",
    "lint": "yarn lint:raw packages",
    "bump": "lerna version --exact --conventional-commits --no-push -m \"chore(release): publish %s\"",
    "publish2": "lerna publish from-package",
    "validate:dependencies": "yarn audit && yarn license-validate",
    "license-validate": "yarn sofie-licensecheck --allowPackages \"buffers@0.1.1;@xencelabs-quick-keys/webhid-demo@0.1.0;caniuse-lite@1.0.30001278;npm-lifecycle@3.1.5;argparse@2.0.1\""
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{css,json,md,scss}": [
      "prettier --write"
    ],
    "*.{ts,js}": [
      "yarn lint:raw --fix"
    ]
  },
  "devDependencies": {
    "@sofie-automation/code-standard-preset": "^0.5.0",
    "@types/jest": "^27.0.2",
    "@types/node": "^14.17.32",
    "@types/node-hid": "^1.3.1",
    "codecov": "^3.8.3",
    "concurrently": "^6.3.0",
    "copy-webpack-plugin": "^9.0.1",
    "cross-env": "^7.0.3",
    "jest": "^27.3.1",
    "lerna": "^4.0.0",
    "open-cli": "^6.0.1",
    "ts-jest": "^27.0.7",
    "ts-loader": "^9.2.6",
    "ts-node": "^9.1.1",
    "typescript": "~4.4",
    "usb-detection": "^4.13.0",
    "webpack": "^5.62.1",
    "webpack-cli": "^4.9.1",
    "webpack-dev-server": "^4.4.0"
  },
  "workspaces": {
    "packages": [
      "packages/core",
      "packages/node",
      "packages/webhid",
      "packages/webhid-demo"
    ]
  }
}
